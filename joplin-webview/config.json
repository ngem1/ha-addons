{
  "name": "Joplin Vieweb",
  "slug": "joplin_vieweb",
  "version": "1.0.0",
  "description": "Web viewer/editor for Joplin notes",
  "startup": "services",
  "boot": "auto",
  "arch": ["amd64","aarch64","armv7"],
  "webui": "http://[HOST]:[PORT:80]/joplin",
  "ports": { "80/tcp": 8080 },
  "options": {
    "JOPLIN_URL": "http://joplin:41184",
    "JOPLIN_TOKEN": "",
    "ORIGINS": "*"
  },
  "schema": {
    "JOPLIN_URL": "str",
    "JOPLIN_TOKEN": "str",
    "ORIGINS": "str"
  },
  "environment": {
    "JOPLIN_URL":    "!!env_var JOPLIN_URL",
    "JOPLIN_TOKEN":  "!!env_var JOPLIN_TOKEN",
    "DJANGO_SETTINGS_MODULE": "server.settings",
    "ORIGINS":       "!!env_var ORIGINS"
  }
}
