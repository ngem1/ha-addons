{
  "name": "Joplin Vieweb",
  "slug": "joplin_vieweb",
  "version": "1.0.0",
  "description": "Web viewer/editor for Joplin notes",
  "arch": ["amd64", "aarch64", "armv7"],
  "startup": "services",
  "boot": "auto",

  "init": false,
  "entrypoint": "/runserver.sh",          // use entrypoint for maximum HA compatibility
  "image": "docker.io/gri38/django-joplin-vieweb:latest",

  "webui": "http://[HOST]:[PORT:80]/joplin",
  "ports": { "80/tcp": 8080 },

  "options": {
    "JOPLIN_URL": "http://joplin:41184",
    "JOPLIN_TOKEN": "",
    "ORIGINS": "*"
  },
  "schema": {
    "JOPLIN_URL": "str",
    "JOPLIN_TOKEN": "str",
    "ORIGINS": "str"
  },
  "environment": {
    "JOPLIN_URL": "!!env_var JOPLIN_URL",
    "JOPLIN_TOKEN": "!!env_var JOPLIN_TOKEN",
    "ORIGINS": "!!env_var ORIGINS"
  }
}
